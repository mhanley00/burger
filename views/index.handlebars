<h2>Burgers🍔</h2>

<div> {{!-- outer div --}}
    <div> {{!-- left div --}}
        <h3>Ready to Eat</h3>
        {{#each burgers}} {{#unless devoured}}
        <span>{{this.burger_name}}</span>
        <form action="/burger/{{this.id}}" method="POST">
            <input type="hidden" type="text" value={{this.id}}>
        <button data-id="{{this.id}}" class="eat-burger" type="submit">Devour It😋</button></input>
        </form>
        {{/unless}} {{/each}}
        <br>
    </div>
    <div> {{!-- right div --}}
        <h3>Devoured</h3>
        {{#each burgers}} {{#if devoured}}<span>{{this.burger_name}}</span> {{/if}} {{/each}}
    </div>
</div>
<div>
    <h3>Create Your Perfect Burger ❤️</h3>
    
</div>